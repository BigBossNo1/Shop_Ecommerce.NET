@model ShopEcommerce.Web.Models.HomeViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .bb-middle-agileits-w3layouts img {
        max-width: 100%;
        height: auto;
    }
</style>
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1" class=""></li>
        <li data-target="#myCarousel" data-slide-to="2" class=""></li>
        <li data-target="#myCarousel" data-slide-to="3" class=""></li>
        <li data-target="#myCarousel" data-slide-to="4" class=""></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <div class="container">
                <div class="carousel-caption">
                    <h3>Ngày Hội Săn  <span>Sale</span></h3>
                    <p>Lớn Nhất Năm</p>
                    <a class="hvr-outline-out button2" href="#">Mua Sắm Ngay </a>
                </div>
            </div>
        </div>
        <div class="item item2">
            <div class="container">
                <div class="carousel-caption">
                    <h3>Áo Vest <span>Nam</span></h3>
                    <p>Mẫu Mới Nhất Tại Cửa Hàng</p>
                    <a class="hvr-outline-out button2" href="#">Mua Sắm Ngay </a>
                </div>
            </div>
        </div>
        <div class="item item3">
            <div class="container">
                <div class="carousel-caption">
                    <h3>Checkin  <span>Cửa hàng  </span></h3>
                    <p>Nhận Ngay Quà Khủng</p>
                    <a class="hvr-outline-out button2" href="#">Mua Sắm Ngay </a>
                </div>
            </div>
        </div>
        <div class="item item4">
            <div class="container">
                <div class="carousel-caption">
                    <h3>Phụ Kiện  <span>Nữ</span></h3>
                    <p>Đa Dạng Mãu Mã</p>
                    <a class="hvr-outline-out button2" href="#">Mua Sắm Ngay </a>
                </div>
            </div>
        </div>
        <div class="item item5">
            <div class="container">
                <div class="carousel-caption">
                    <h3>Phụ Kiện  <span>Nam </span></h3>
                    <p>Đa Dạng Mãu Mã</p>
                    <a class="hvr-outline-out button2" href="mens.html">Mua Sắm Ngay </a>
                </div>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="banner_bottom_agile_info">
    <div class="container">
        <div class="banner_bottom_agile_info_inner_w3ls">
            <div class="col-md-6 wthree_banner_bottom_grid_three_left1 grid">
                <figure class="effect-roxy">
                    <img src="~/Assets/Client/images/bottom1.jpg" alt=" " class="img-responsive" />
                    <figcaption>
                        <h3><span>P</span>hụ Kiện</h3>
                        <p>Đa Dạng</p>
                    </figcaption>
                </figure>
            </div>
            <div class="col-md-6 wthree_banner_bottom_grid_three_left1 grid">
                <figure class="effect-roxy">
                    <img src="~/Assets/Client/images/bottom2.jpg" alt=" " class="img-responsive" />
                    <figcaption>
                        <h3><span>T</span>hời Trang</h3>
                        <p>Đẳng Cấp</p>
                    </figcaption>
                </figure>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<div class="banner-bootom-w3-agileits">
    <div class="container">
        <h3 class="wthree_text_info">Sản phẩm <span>Hot</span></h3>

        <div class="row">
            @foreach (var hotProduct in Model.lastesProduct)
            {
                <div class="col-md-4 col-sm-6 bb-grids bb-middle-agileits-w3layouts">
                    <a href="mens.html">
                        <div class="bb-middle-agileits-w3layouts grid">
                            <figure class="effect-roxy">
                                <img src="@hotProduct.Image" alt=" " class="img-responsive" />
                                <figcaption>
                                    <h3><span>S</span>ale </h3>
                                    <p>Upto 55%</p>
                                </figcaption>
                            </figure>
                        </div>
                    </a>
                    <div class="clearfix"></div>
                </div>
            }
        </div>
    </div>
</div>

<div class="new_arrivals_agile_w3ls_info">
    <div class="container">
        <h3 class="wthree_text_info">Các mặt hàng <span>hiện có</span></h3>
        <ul class="resp-tabs-list">
            @foreach (var listProductCategory in Model.latesProductCategory.Where(x => x.ParentID != null))
            {
                var url = "/" + listProductCategory.Alias + "-pc-" + listProductCategory.ID + "/infor";
                <li><a href="@url"><font color="green"><strong>@listProductCategory.Name</strong></font></a></li>
            }
        </ul>
    </div>
</div>
<div class="coupons">
    <div class="coupons-grids text-center">
        <div class="w3layouts_mail_grid">
            <div class="col-md-3 w3layouts_mail_grid_left">
                <div class="w3layouts_mail_grid_left1 hvr-radial-out">
                    <i class="fa fa-truck" aria-hidden="true"></i>
                </div>
                <div class="w3layouts_mail_grid_left2">
                    <h3>MIỄN PHÍ SHIP</h3>
                    <p>Cho đơn hàng trên 500.000 VND</p>
                </div>
            </div>
            <div class="col-md-3 w3layouts_mail_grid_left">
                <div class="w3layouts_mail_grid_left1 hvr-radial-out">
                    <i class="fa fa-headphones" aria-hidden="true"></i>
                </div>
                <div class="w3layouts_mail_grid_left2">
                    <h3>HỖ TRỢ 24/7</h3>
                    <p>Liên hệ với chúng tôi , mọi lúc mọi nơi</p>
                </div>
            </div>
            <div class="col-md-3 w3layouts_mail_grid_left">
                <div class="w3layouts_mail_grid_left1 hvr-radial-out">
                    <i class="fa fa-shopping-bag" aria-hidden="true"></i>
                </div>
                <div class="w3layouts_mail_grid_left2">
                    <h3>ĐA DẠNG MẪU MÃ</h3>
                    <p>Có trên 1000+ sản phẩm để khách hàng chọn lựa</p>
                </div>
            </div>
            <div class="col-md-3 w3layouts_mail_grid_left">
                <div class="w3layouts_mail_grid_left1 hvr-radial-out">
                    <i class="fa fa-gift" aria-hidden="true"></i>
                </div>
                <div class="w3layouts_mail_grid_left2">
                    <h3>ƯU ĐÃI LỚN</h3>
                    <p>Có nhiều chính sách ưu đãi cho những khách hàng thân thiết </p>
                </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>
